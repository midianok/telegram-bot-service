{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
